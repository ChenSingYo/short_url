  
<div class="card card-body shadow mt-2">  
  <div class="d-flex logo justify-content-center mt-2">
    <a href="/" class="h4 mt-2">
      URL
    </a>
    <i class="bi bi-link-45deg" style="font-size: 2rem"></i>
    <a href="/" class="h4 mt-2">
      SHORTNER
    </a>
  </div>
  <form class="mt-3" action="/shorten" method="POST">
    <input type="Url" name="originalUrl" class="form-control" style="width:29rem" placeholder="paste original URL" value="" required autofocus>
    <button class="mx-auto btn btn-sm btn-warning font-weight-bold mt-3" style="display:block; width: 130px;" type="submmit">
      MAKE IT SHORT
    </button>
  </form>
  
  {{#if checkUrl }}
  <div class="card mb-1 mt-4">
    <div class="img-container">
      <div class="bg-img">
        <img src="{{img}}" alt="...">
      </div>
    </div>
    <div class="card-body bg-light">
      <div class="card-title">
        {{title}}
      </div>
      <p class="card-text">{{description}}<p/>
      <div class="input-group mb-3">
        <input type="text" class="form-control" aria-describedby="basic-addon2" value="{{shortUrl}}" id="shortUrl">
        <button type="button" class="card-text btn btn-secondary btn-sm" onclick="copyToClipboard()" id="tooltip">
        Copy
        </button>
      </div>
    </div>
  {{/if}}

  {{#if newUrl}}
  <div class="card mb-1 mt-4">
    <div class="img-container">
      <div class="bg-img">
        <img src="{{img}}" alt="...">
      </div>
    </div>
    <div class="card-body bg-light">
      <div class="card-title">
        {{title}}
      </div>
      <p class="card-text">{{description}}</p>
      <div class="input-group mb-3">
        <input type="text" class="form-control" aria-describedby="basic-addon2" value="{{shortUrl}}" id="shortUrl">
        <button type="button" class="card-text btn btn-secondary btn-sm" onclick="copyToClipboard()" id="tooltip">
        Copy
        </button>
      </div>
    </div>
  {{/if}}

  {{#if alert}}
  <div class="alert alert-dark mt-3 d-flex justify-content-center" role="alert">
      <p>URL not exist. Please make sure if it's valid URL.<br><span class="text-muted">{{alert}}</span></p>
  </div>
  {{/if}}
</div>

<script>
function copyToClipboard() {
  let copyText = document.getElementById('shortUrl')
  let tooltip = document.getElementById('tooltip')
  copyText.select()
  document.execCommand('copy')
  tooltip.innerHTML = 'Copied!'
}
</script>


